<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="LMInterface.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Disable TextBox focus border -->
            <Thickness x:Key="TextControlBorderThemeThickness">0</Thickness>
            <Thickness x:Key="TextControlBorderThemeThicknessFocused">0</Thickness>
            <SolidColorBrush x:Key="TextControlElevationBorderFocusedBrush">Transparent</SolidColorBrush>
            <!-- Override Min/Max Width/Height of ContentDialog -->
            <x:Double x:Key="ContentDialogMinWidth">0</x:Double>
            <x:Double x:Key="ContentDialogMaxWidth">2000</x:Double>
            <x:Double x:Key="ContentDialogMinHeight">0</x:Double>
            <x:Double x:Key="ContentDialogMaxHeight">2000</x:Double>
        </ResourceDictionary>
</Application.Resources>
</Application>
